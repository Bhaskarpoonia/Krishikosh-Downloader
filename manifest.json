{
  "manifest_version": 3,
  "name": "Krishikosh Downloader",
  "version": "1.1.0",
  "description": "Downloads files on demand from Krishikosh",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "webRequest",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://krishikosh.egranth.ac.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}